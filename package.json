{
  "name": "@maarkllc/coding-standards",
  "version": "1.0.0",
  "description": "Maark's recommended linter rules for code style and formatting.",
  "author": "Maark, LLC",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/MAARK/coding-standards"
  },
  "bugs": {
    "url": "https://github.com/MAARK/coding-standards/issues"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "concurrently npm:lint:*",
    "fix": "concurrently 'npm:lint:* -- {1}' -P -- --fix",
    "lint:js:base": "eslint -c ./js/base/index.js './js/base/**/*.js'",
    "lint:js:react": "eslint -c ./js/react/index.js './js/react/**/*.js'",
    "lint:css:base": "stylelint --config ./css/base/index.js './css/base/**/*.css'"
  },
  "peerDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^7.2.2"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  }
}
